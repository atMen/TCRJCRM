<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_province"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_50"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/bg_7e00"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择省市区"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigth_45"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="省级"
            android:textColor="@color/word_4545"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/line_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_3"
            android:layout_marginTop="@dimen/padding_3"
            android:background="@color/main_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="市级"
            android:textColor="@color/word_4545"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/line_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_3"
            android:layout_marginTop="@dimen/padding_3"
            android:background="@color/main_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区县"
            android:textColor="@color/word_4545"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1"
        android:background="@color/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/province_listview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_300"
            android:layout_weight="1"
            android:divider="@color/main_line"
            android:dividerHeight="@dimen/line_1"
            android:fadingEdge="none"
            android:listSelector="@color/main_bg"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/city_listview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_300"
            android:layout_weight="1"
            android:divider="@color/main_line"
            android:dividerHeight="@dimen/line_1"
            android:fadingEdge="none"
            android:listSelector="@color/main_bg"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/area_listview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_300"
            android:layout_weight="1"
            android:divider="@color/main_line"
            android:dividerHeight="@dimen/line_1"
            android:fadingEdge="none"
            android:listSelector="@color/main_bg"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>