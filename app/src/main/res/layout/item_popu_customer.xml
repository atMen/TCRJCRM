<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_15"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_triangle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/height_5"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/bg_popu_background"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/height_5">

        <TextView
            android:id="@+id/tv_popu_customer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_popuwindow_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:text="编辑客户"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/main_line" />

        <TextView
            android:id="@+id/tv_popu_report"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_popuwindow_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:text="客户报备"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/main_line" />

        <TextView
            android:id="@+id/tv_popu_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_popuwindow_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:text="客户共享"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/main_line" />

        <TextView
            android:id="@+id/tv_popu_move"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_popuwindow_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:text="客户转移"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/main_line" />

        <TextView
            android:id="@+id/tv_popu_seas"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bg_height_40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_popuwindow_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:text="投入公海"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
</RelativeLayout>