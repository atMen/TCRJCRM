<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_backgrond"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_record_exist"
            style="@style/btn_item_90_search"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_record_exist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="筛选"
                android:textSize="18sp"
                android:textColor="@color/word_7373" />



            <ImageView
                android:id="@+id/img_record_exist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                 />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="48dp"
            android:background="@color/main_gird_line" />

        <LinearLayout
            android:id="@+id/layout_recordsearch"
            style="@style/btn_item_90_search"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_record_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/customer_search"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gird_line" />
</LinearLayout>