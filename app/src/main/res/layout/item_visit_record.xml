<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_50"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tcrj.spv.views.control.CircleImageView
                android:id="@+id/visit_circle_image"
                android:layout_width="@dimen/heigth_45"
                android:layout_height="@dimen/heigth_45"
                android:src="@mipmap/img_photo" />

            <TextView
                android:id="@+id/tv_visit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:hint="张继科"
                android:textColor="@color/word_4545"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_visit_ways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_visit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:id="@+id/layout_visit_map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/margin_10"-->
        <!--android:orientation="vertical">-->

        <!--<ImageView-->
            <!--android:id="@+id/img_visit_map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/bg_height_90"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@mipmap/default_visit_record" />-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_40"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:scaleType="fitXY"
            android:src="@mipmap/img_customer_address" />

        <TextView
            android:id="@+id/tv_visit_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@color/main_line" />

    <LinearLayout
        android:id="@+id/layout_visit_customer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_40"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:scaleType="fitXY"
            android:src="@mipmap/img_customer_name" />

        <TextView
            android:id="@+id/tv_visit_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <include layout="@layout/item_map_height" />
</LinearLayout>