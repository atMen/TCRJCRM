<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_50"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_filter_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="筛选"
                android:textColor="@color/word_7373" />

            <ImageView
                android:id="@+id/img_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:src="@mipmap/img_drop_down" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_5"
            android:layout_marginTop="@dimen/height_5"
            android:background="@color/main_line" />

        <LinearLayout
            android:id="@+id/layout_filter_sort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="排序"
                android:textColor="@color/word_7373" />

            <ImageView
                android:id="@+id/img_sort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:src="@mipmap/img_drop_down" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1"
        android:background="@color/main_line" />
</LinearLayout>