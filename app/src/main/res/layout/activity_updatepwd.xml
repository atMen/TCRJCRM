<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bg_height_50"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/bg_password_selector"
            android:drawableLeft="@mipmap/img_password_select"
            android:drawablePadding="@dimen/padding_5"
            android:hint="请输入当前密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bg_height_50"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/bg_password_selector"
            android:drawableLeft="@mipmap/img_password_select"
            android:drawablePadding="@dimen/padding_5"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/edt_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bg_height_50"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/bg_password_selector"
            android:drawableLeft="@mipmap/img_password_select"
            android:drawablePadding="@dimen/padding_5"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:textColor="@color/word_7373"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_password_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigth_45"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/bg_button_submit"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold" />
</LinearLayout>
