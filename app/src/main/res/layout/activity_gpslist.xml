<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_height_55"
        android:background="@mipmap/bg_title90">

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="@dimen/margin_8"
            android:src="@mipmap/img_back" />


        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_gravity="center"
            android:background="@drawable/bg"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_one"
                android:padding="5dp"
                android:background="@drawable/tvone"
                android:gravity="center"
                android:text="已展示"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_two"
                android:padding="5dp"
                android:gravity="center"
                android:text="未展示"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mytvone"/>

        </LinearLayout>


    </LinearLayout>

    <include
        android:id="@+id/customer_listview"
        layout="@layout/pulldown_listview" />
</LinearLayout>