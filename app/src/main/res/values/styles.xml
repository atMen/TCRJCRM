    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/MyDialogAnimation</item>
        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyDialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@anim/modal_in</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@anim/modal_out</item>
    </style>


</resources>
