<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/grid_height_35" />
            <stroke android:width="@dimen/line_1" android:color="@color/main_line" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_bg" />
            <corners android:radius="@dimen/grid_height_35" />
            <stroke android:width="@dimen/line_1" android:color="@color/bg_914a" />
        </shape>
    </item>
</selector>